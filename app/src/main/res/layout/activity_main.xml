<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5D876B"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#ffabab"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="25sp"
            android:gravity="center"
            android:text="Jugador 1" />

        <TextView
            android:id="@+id/estadoJugador1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="18sp"
            android:gravity="center"
            android:text="Estado: Esperando..." />

        <TextView
            android:id="@+id/puntosJugador1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="20sp"
            android:text="Puntaje: 0" />

        <TextView
            android:id="@+id/ganadorJ1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="20sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/dadosuno" />

            <ImageView
                android:id="@+id/img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/dadosuno" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="155dp"
        android:layout_gravity="center|right"
        android:background="#e7ffac"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Jugador 2"
            android:textColor="#000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/estadoJugador2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Estado: Esperando..."
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/puntosJugador2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Puntaje: 0"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/ganadorJ2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center"
            android:textColor="#000"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_gravity="bottom|center"
        android:background="#ace7ff"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Jugador 3"
            android:textColor="#000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/estadoJugador3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Estado: Esperando..."
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/puntosJugador3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Puntaje: 0"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/ganadorJ3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="147dp"
        android:layout_gravity="center|left"
        android:background="#6eb5ff"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Jugador 4"
            android:textColor="#000"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/estadoJugador4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Estado: Esperando..."
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/puntosJugador4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Puntaje: 0"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/ganadorJ4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#000"
            android:textSize="20sp"
            android:text="" />
    </LinearLayout>

    <Button
        android:id="@+id/comenzar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comenzar"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/rondas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:textColor="#000"
        android:textSize="25sp"
        android:text="Ronda: 1" />

</FrameLayout>